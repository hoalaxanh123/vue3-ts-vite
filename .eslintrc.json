{
  "root": true,
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": [
    "plugin:vue/vue3-recommended",
    "eslint:recommended",
    "@vue/typescript/recommended",
    "eslint-config-prettier"
  ],
  "parserOptions": {
    "ecmaVersion": 2021
  },
  "plugins": [],
  "ignorePatterns": ["vite-env.d.ts", "**/vendor/*.js"],
  "rules": {
    "vue/require-default-prop": "warn",
    "no-unused-vars": "off",
    "@typescript-eslint/no-unused-vars": "off"
  }
}
